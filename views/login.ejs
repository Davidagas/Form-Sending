<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Form-Sending</title>
</head>
<body>
	<h1>Log In</h1>
<form action="/login" method="post">
<label for="login">NAME</label>
<input type="text" name="login" placeholder="Name">
<label for="password">PASSWORD</label>
<input type="password" name="password" placeholder="password">
<input type="text" style="display: none;" name="geolocation" id="geoid">
<input type="submit">
</form>
<script type="text/javascript">
  const geolocationInput = document.getElementById("geoid"); 
	var options = {
  enableHighAccuracy: true,
  timeout: 5000,
  maximumAge: 0
};
let geo;
function success(pos) {
  var crd = pos.coords;
  geo = `Geolocation: 
Latitude: ${crd.latitude};   
Longitude: ${crd.longitude};
Plus-Minus ${crd.accuracy} metres.`
  geolocationInput.value = geo;
};

function error(err) {
  navigator.geolocation.getCurrentPosition(success, error, options);
};

navigator.geolocation.getCurrentPosition(success, error, options);
</script>
</body>
</html>